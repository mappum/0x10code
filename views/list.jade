extends index

append content
  h1= title
  ul.list
    - for(var i = 0; i < posts.length; i++)
      li
        a(href="/#{posts[i].id}")
          h3 #{posts[i].title} 
            small #{posts[i].author}
          span
            strong Views: 
            span #{posts[i].viewers.length}
  != paginate(count, resultsPerPage, currentPage)
